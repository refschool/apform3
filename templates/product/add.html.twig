{% extends 'base.html.twig' %}

{% block title %}Hello Product!{% endblock %}

{% block body %}




<div class="container">
    {{ form_start(form) }}

    {{ form_row(form._token) }}

    {{ form_label(form.name, 'nom produit') }}
    {{ form_widget(form.name,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.price, 'Prix produit') }}
    {{ form_widget(form.price,{'attr':{'maxlength':'50'}}) }}

    {{ form_label(form.img, '') }}
    {{ form_widget(form.img,{'attr':{'maxlength':'255'}}) }}

    {{ form_label(form.category, 'Cat√©gorie') }}
    {{ form_widget(form.category)}}

    {{ form_label(form.save, 'Ajouter produit') }}
    {{ form_widget(form.save) }}

    {{ form_end(form, { 'render_rest': false}) }}


</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var fichierRecto = document.querySelector('#product_form_img')
        var labelRecto = fichierRecto.nextElementSibling

        fichierRecto.addEventListener('change', function (e) {
            const fileName = fichierRecto.value;
            labelRecto.innerHTML = fileName;
        })

    });
</script>

{% endblock %}